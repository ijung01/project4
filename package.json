{
  "scripts": {
    "build": "run-s build:sass build:eleventy",
    "start": "run-p watch:sass watch:eleventy",
    "build:eleventy": "eleventy",
    "watch:eleventy": "eleventy --serve --quiet",
    "build:sass": "sass --load-path='./node_modules' --no-source-map src/sass/styles.scss:src/css/styles.css",
    "watch:sass": "sass --load-path='./node_modules' --no-source-map --watch src/sass/styles.scss:src/css/styles.css"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "@11ty/eleventy": "^0.11.1",
    "sass": "^1.27.2"
  }
}
